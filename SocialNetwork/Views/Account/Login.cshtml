@model LoginViewModel
@{
    ViewBag.Title = "Авторизация";
    Layout = "_MainLayout";
}
<div class="align-items-center flex-container flex-column">
    <div class="text-danger w-25" asp-validation-summary="All"></div>
    
    <form id="loginForm" asp-action="Login" asp-controller="Account" method="post" class="w-25">
        <div class="form-group">
            <label asp-for="Name"></label>
            <div><span asp-validation-for="Name" class="text-danger"></span></div>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
            <input asp-for="Password"  class="form-control"/>
        </div>
        <button type="submit" class="btn btn-outline-primary">Войти</button>
    </form>
</div>